<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <icon>
  <small-icon>/images/fav16.jpg</small-icon>
  <large-icon>/images/fav32.jpg</large-icon>
 </icon>
 <!-- <icon> <small-icon>/images/logo.jpg</small-icon> </icon> -->
 <display-name>Archetype Created Web Application</display-name>
 <servlet>
  <servlet-name>Test</servlet-name>
  <display-name>Test</display-name>
  <servlet-class>icrperusa.servlet.Test</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>rptToolsGuide</servlet-name>
  <display-name>rptToolsGuide</display-name>
  <servlet-class>icrperusa.servlet.ToolsGuide</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>OrdenPurchase</servlet-name>
  <display-name>OrdenPurchase</display-name>
  <servlet-class>icrperusa.servlet.OrdenPurchase</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>FileUploadServlet</servlet-name>
  <display-name>FileUploadServlet</display-name>
  <servlet-class>icrperusa.servlet.FileUploadServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>ErrorHandler</servlet-name>
  <display-name>ErrorHandler</display-name>
  <servlet-class>icrperusa.servlet.ErrorHandler</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>GuideRetTools</servlet-name>
  <display-name>GuideRetTools</display-name>
  <servlet-class>icrperusa.servlet.GuideRetTools</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Test</servlet-name>
  <url-pattern>/test</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>rptToolsGuide</servlet-name>
  <url-pattern>/guide/tools</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>OrdenPurchase</servlet-name>
  <url-pattern>/purchase</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>FileUploadServlet</servlet-name>
  <url-pattern>/upload</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ErrorHandler</servlet-name>
  <url-pattern>/ErrorHandler</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>GuideRetTools</servlet-name>
  <url-pattern>/guide/toolsreturn</url-pattern>
 </servlet-mapping>
 <!-- error-code related error pages -->
 <error-page>
  <error-code>404</error-code>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <error-code>503</error-code>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <error-code>403</error-code>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <exception-type>javax.servlet.ServletException</exception-type>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <exception-type>java.io.IOException</exception-type>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <exception-type>org.postgresql.util.PSQLException</exception-type>
  <location>/ErrorHandler</location>
 </error-page>
 <error-page>
  <exception-type>java.sql.SQLException</exception-type>
  <location>/ErrorHandler</location>
 </error-page>
</web-app>
